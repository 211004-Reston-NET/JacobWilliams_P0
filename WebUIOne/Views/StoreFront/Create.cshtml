@model WebUIOne.Models.StoreFrontVM

<h1 class="display-4">Create StoreFront</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label asp-for="StoreFrontName" class="form-label">StoreFrontName</label>
        <input asp-for="StoreFrontName" type="text" class="form-control">
        <span asp-validation-for="StoreFrontName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="StoreFrontAddress" class="form-label">StoreFrontAddress</label>
        <input asp-for="StoreFrontAddress" type="text" class="form-control">
        <span asp-validation-for="StoreFrontAddress" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" value="Create">Submit</button>
</form>