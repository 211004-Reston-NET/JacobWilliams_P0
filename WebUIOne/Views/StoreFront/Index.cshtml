@{
}

@*This tells you that this view will expect to retrieve a list of StoreFrontVM *@
@model IEnumerable<WebUIOne.Models.StoreFrontVM>

<h1>List Of StoreFronts</h1>

<!--<a class="btn btn-primary text-white"asp-controller="StoreFront" asp-action="Create">Add A StoreFront</a>-->
<br />
<br /> <!-- This Break Tag Will Space between elements on the webpage-->


<table>
    <tr>
        <th>StoreFront Name</th>
        <th>StoreFront ID</th>
        <th>StoreFront Address</th>
    </tr>
    <tr>
    @foreach(StoreFrontVM item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.StoreFrontName)</td>
            <td>@Html.DisplayFor(modelItem => item.StoreFrontId)</td>
            <td>@Html.DisplayFor(modelItem => item.StoreFrontAddress)</td>
        </tr>
    }
</table>