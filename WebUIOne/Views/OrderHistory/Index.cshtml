@{
}
@model IEnumerable<WebUIOne.Models.OrderHistoryVM>

<h1>Order History</h1>

<br />
<br />

<table>
    <tr>
        <th>Order ID</th>
        <th>Total Price</th>
        <th>StoreFront ID</th>
        <th>Customer ID</th>
        <th>Store Address</th>
    </tr>
    <tr>
        @foreach (OrderHistoryVM item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.OrdersId)</td>
            <td>@Html.DisplayFor(modelItem => item.TotalPrice)</td>
            <td>@Html.DisplayFor(modelItem => item.StoreFrontId)</td>
            <td>@Html.DisplayFor(modelItem => item.CustomerId)</td>
            <td>@Html.DisplayFor(modelItem => item.Address)</td>
        </tr>

    }
    </table>
